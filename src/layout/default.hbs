<!DOCTYPE html>
<html>

<head>
	<title>
		{{page.title}}
	</title>
	<meta charset='utf-8' />
	<link href='css/index.css' rel='stylesheet' />
</head>

<body>
	{{#with header}}
	<header>
		<div>
			<h1>{{name.firstname}} {{name.lastname}}</h1>
		</div>
		<div>
			<b>{{position}}</b>
		</div>
		<br>
		<div>
			<em>{{salary}}</em>
		</div>
		<br>
		<hr>

		<address>{{address}}</address>
		<hr>
	</header>
	{{/with}}

	{{> nav}}

	{{{body}}}


	<footer>
		{{> footer}}
	</footer>

</body>

</html>